{
  "name": "hotspot-api",
  "version": "1.0.0",
  "description": "hotspot API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist",
    "watch-server": "nodemon --exec 'npm start' --watch dist -e '*'",
    "watch": "concurrently 'npm run build -- -w' 'npm run watch-server -- --delay 1'",
    "lint": "tslint src/**/*.ts"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/node": "^10.0.3",
    "concurrently": "^5.0.2",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0",
    "typescript": "^3.7.4",
    "typescript-tslint-plugin": "^0.5.5"
  }
}
